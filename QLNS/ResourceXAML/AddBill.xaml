<Window x:Class="QLNS.ResourceXAML.AddBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLNS.ResourceXAML"
        xmlns:uc="clr-namespace:QLNS.Controls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Name="addBill"
        Title="AddBill" 
        Height="790" Width="1150"
        MinHeight="790" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{DynamicResource SecundaryBackgroundColor}"
        Loaded="addBill_Loaded"
        >

    <Window.Resources>

        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
        </Style>

        <Style x:Key="ContentText" TargetType="TextBlock">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
        </Style>

        <Style x:Key="quantityButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{DynamicResource SecundaryBackgroundColor}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Border CornerRadius="5"
            Background="{DynamicResource SecundaryBackgroundColor}"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="1"
                       Grid.Row="2"
                       Width="1" 
                       Margin="10 0"
                       Stroke="{DynamicResource SepratorBackgroundColor}" />

            <!--App Title-->
            <!--
            <TextBlock Text="Thêm hóa đơn" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"
                           FontSize="15" 
                           FontWeight="SemiBold"
                           />-->

            <!-- Start: Button Close | Restore | Minimize -->
            <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.ColumnSpan="2">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                <Button x:Name="btnRestore" Margin="5,0" Click="btnRestore_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButtonsStyle}">
                            <Setter Property="Content" Value="{DynamicResource maximize}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}" Value="Maximized">
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
            </StackPanel>
            <!-- End: Button Close | Restore | Minimize -->

            <!-- Seprator -->
            <Separator Height="1" Grid.Row="1" Grid.ColumnSpan="3"
                               Background="{DynamicResource SepratorBackgroundColor}"
                               Margin="0 0 0 5"/>

            <!--Start: Right Section-->
            <Border Grid.Row="2"
                    Grid.Column="3"
                    CornerRadius="7 0 0 7"
                    Background="{DynamicResource SecundaryBackgroundColor}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Text="nhan vien"
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource TitleText}"
                        />

                    <TextBlock
                        Text="thoi gian"
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource ContentText}"
                        />

                    <Grid Grid.Row="1"
                          Grid.ColumnSpan="2">
                        <ListBox 
                            x:Name="itemProduct"
                            SelectionChanged="itemProduct_SelectionChanged"
                            ItemsSource="{Binding itemProduct}" d:ItemsSource="{d:SampleData ItemCount=5}"
                                 >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical"
                                                Margin="0 0"
                                                Width="380">
                                        <TextBlock
                                            Text="{Binding HDTenSP}"
                                            Foreground="{DynamicResource PrimaryTextColor}"
                                            />

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="{Binding HDSoLuong}"
                                                Grid.Column="0"
                                                Foreground="{DynamicResource PrimaryTextColor}"
                                                HorizontalAlignment="Left"
                                                />

                                            <TextBlock
                                                Text="{Binding HDDonGia}"
                                                Grid.Column="1"
                                                Foreground="{DynamicResource PrimaryTextColor}"
                                                HorizontalAlignment="Center"
                                                />

                                            <TextBlock
                                                Text="{Binding HDThanhTien}"
                                                Grid.Column="2"
                                                Foreground="{DynamicResource PrimaryTextColor}"
                                                HorizontalAlignment="Right"
                                                />
                                        </Grid>

                                        <Separator Height="1" 
                                                   Background="{DynamicResource SepratorBackgroundColor}"
                                                   Margin="0 5 0 5"/>

                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Expander Grid.Row="2"
                              Grid.ColumnSpan="2"
                              Header="Thong tin khach hang"
                              Visibility="Visible"
                              Name="customerExpander">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <ComboBox x:Name="customerComboBox" 
                                      Grid.Row="0"
                                      SelectedValuePath="idKH"
                                      SelectionChanged="customerComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding MaKH}" />
                                            <TextBlock Text="{Binding TenKH}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1">
                                <TextBlock
                                    Text="SDT"
                                    Name="lblSDT"                                
                                    />

                                <TextBlock 
                                    Text="DiaChi"
                                    Name="lblDiaChi"
                                    />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="2">
                                <TextBlock
                                    Text="DiemTichLuy"
                                    Name="lblDiemTichLuy"                                
                                    />

                                <TextBlock
                                    Text="LoaiKH"
                                    Name="lblLoaiKH"
                                    />
                            </StackPanel>
                            
                        </Grid>
                        
                    </Expander>

                    <Expander Grid.Row="3"
                              Grid.ColumnSpan="2"
                              Header="Chuong trinh khuyen mai"
                              Visibility="Visible"
                              Name="vocherExpander">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <ComboBox x:Name="voucherComboBox" 
                                      Grid.Row="0"
                                      SelectedValuePath="idKM"
                                      SelectionChanged="voucherComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding MaKM}" />
                                            <TextBlock Text="{Binding TenKM}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1">
                                <TextBlock
                                    Text="NgayBD"
                                    Name="lblNgayBD"                                
                                    />

                                <TextBlock
                                    Text="NgayKT"
                                    Name="lblNgayKT"
                                    />
                            </StackPanel>

                            <TextBlock
                                Text="GiamGia"
                                Name="lblKhuyenMai"
                                Grid.Row="2"
                                />
                        </Grid>
                    </Expander>

                    <Expander 
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Header="Phuong thuc thanh toan"
                        Visibility="Visible"
                        Name="paymentExpander">
                        
                        <ComboBox x:Name="paymentComboBox" 
                                      Grid.Row="0"
                                      SelectedValuePath="idPT"
                                      SelectionChanged="paymentComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding TenPT}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    </Expander>
                              
                    <!-- Seprator -->
                    <Separator Height="1" Grid.Row="5"
                               Grid.ColumnSpan="2"
                                    Background="{DynamicResource SepratorBackgroundColor}"
                                    Margin="0 5 0 5"/>

                    <Grid Grid.Row="6"
                          Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Text="Số lượng"
                            Grid.Row="0"
                            Style="{StaticResource TitleText}"
                            />

                        <TextBlock
                            x:Name="lblSLSP"
                            Grid.Row="0"
                            Style="{StaticResource ContentText}"
                            />

                        <TextBlock 
                            Text="Thành tiền"
                            Grid.Row="1"
                            Style="{StaticResource TitleText}"
                            />

                        <TextBlock
                            x:Name="lblTongTien"
                            Grid.Row="1"
                            Style="{StaticResource ContentText}"
                            FontWeight="Bold"
                            />

                        <TextBlock 
                            Text="Giảm giá"
                            Grid.Row="2"
                            Style="{StaticResource TitleText}"
                            />

                        <TextBlock 
                            Name="lblGiamGia"
                            Grid.Row="2"
                            Style="{StaticResource ContentText}"
                            />

                        <TextBlock
                            Text="Tổng thanh toán"
                            Grid.Row="3"
                            Style="{StaticResource TitleText}"
                            />

                        <TextBlock
                            Name="lblTongThanhToan"
                            Grid.Row="3"
                            Style="{StaticResource ContentText}"
                            FontWeight="Bold"
                            />
                        
                    </Grid>

                    <!-- Add Button -->
                    <Button x:Name="btnCheckOut"
                            Grid.Row="6"
                            Grid.Column="1"
                            Style="{StaticResource checkOutButton}" 
                            Click="btnCheckOut_Click"
                            >
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Plus"
                                                VerticalAlignment="Center"
                                                Width="11"
                                                Height="11"
                                               Margin="0 0 10 0"
                                               Foreground="{DynamicResource IconButtonColor}"/>

                            <TextBlock Text="Thanh toán"
                                   Foreground="{DynamicResource TextButtonColor}"/>
                        </StackPanel>
                    </Button>

                </Grid>

            </Border>
            <!--End: Right Section-->


            <!--Start: Left Section-->
            <Border Grid.Row="2"
                    Background="{DynamicResource SecundaryBackgroundColor}"
                    CornerRadius="0 0 0 0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="10 5">

                        <TextBox x:Name="txtSearch" 
                            Style="{DynamicResource searchTextBox}"
                            KeyDown="txtSearch_KeyDown"
                            />

                        <Icon:PackIconMaterial Kind="Magnify"
                                        Width="14"
                                        Height="14"
                                        Foreground="{DynamicResource PrimaryTextColor}"
                                        VerticalAlignment="Center"
                                        />
                    </Grid>

                    <TabControl
                        x:Name="categoryTabControl"
                        Grid.Row="1"
                        >
                        <TabItem Header="Tất cả sản phẩm"
                                 Name="allProductTabItem"
                                 HorizontalAlignment="Left">
                            <DataGrid 
                                    ItemsSource="{Binding listProducts}"
                                    x:Name="allProductDataGrid"
                                    AutoGenerateColumns="False"
                                    SelectionChanged="allProductDataGrid_SelectionChanged"
                                    >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã SP"
                                                            Binding="{Binding MaSP}"
                                                            IsReadOnly="True"
                                                            Width="auto"/>

                                    <DataGridTextColumn Header="Tên sản phẩm"
                                                        Binding="{Binding TenSP}"
                                                        IsReadOnly="True"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="SLCL"
                                                        Binding="{Binding SLCL}"
                                                        IsReadOnly="True"
                                                        Width="auto"/>

                                    <DataGridTextColumn Header="Đơn giá"
                                                        Binding="{Binding DonGia}"
                                                        IsReadOnly="True"
                                                        Width="auto"/>

                                    <DataGridTextColumn Header="Ghi chú"
                                                        Binding="{Binding GhiChu}"
                                                        IsReadOnly="True"
                                                        Width="*"/>

                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>

                    <!-- Seprator -->
                    <Separator Height="1" 
                            Grid.Row="2"
                            Background="{DynamicResource SepratorBackgroundColor}"
                            Margin="0 5 0 5"/>

                    <Expander Grid.Row="3"
                              Visibility="Collapsed"
                              Name="productExpander">
                        
                        <Expander.Header>
                            <TextBlock x:Name="headerExpander"
                                       FontWeight="Bold"/>
                        </Expander.Header>
                        
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                    Grid.Row="0"
                                    Grid.Column="0">
                                <TextBlock 
                                Name="lblSLDaBan"
                                Text="Đã bán: 10"
                                />

                                <Rectangle 
                                Width="1" 
                                Margin="5 0"
                                Stroke="{DynamicResource SepratorBackgroundColor}" />

                                <TextBlock 
                                Name="lblSLConLai"
                                Text="Còn lại: 5"
                                />
                            </StackPanel>

                            <TextBlock
                                Name="lblMoTa"
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="ahihi"
                            />

                            <TextBlock
                                Name="lblDonGia"   
                                Grid.Row="0"
                                Grid.Column="1"
                                FontSize="20"
                                FontWeight="Bold"  
                                HorizontalAlignment="Right"
                            />

                            <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    >
                                <TextBlock
                                    Name="lblSoLuong"
                                    Text="So luong"
                                    Grid.Column="1"
                                    Grid.Row="1"
                                />

                                <Button
                                    x:Name="btnSub"
                                    Click="btnSub_Click"
                                    Style="{StaticResource quantityButton}"
                                    >
                                    <Icon:PackIconMaterial
                                        Kind="Minus"
                                        VerticalAlignment="Center"
                                        Width="11"
                                        Height="11"
                                        Foreground="{DynamicResource PrimaryTextColor}"/>
                                </Button>

                                <TextBox x:Name="txtSoLuong"
                                     KeyDown="txtSoLuong_KeyDown"
                                     LostFocus="txtSoLuong_LostFocus"
                                     Width="50"
                                     Height="30"
                                     Background="{DynamicResource SecundaryBackgroundColor}"
                                     Foreground="{DynamicResource PrimaryTextColor}"
                                />

                                <Button
                                    x:Name="btnAdd"
                                    Click="btnAdd_Click"
                                    Style="{StaticResource quantityButton}"
                                    >
                                    <Icon:PackIconMaterial
                                        Kind="Plus"
                                        VerticalAlignment="Center"
                                        Width="11"
                                        Height="11"
                                        Foreground="{DynamicResource PrimaryTextColor}"/>
                                </Button>

                            </StackPanel>

                            <TextBlock 
                                Name="lblThanhTien"
                                Text="Thanh tien"
                                Grid.Column="1"
                                Grid.Row="2"
                                HorizontalAlignment="Right"
                            />

                            <!-- Add Button -->
                            <Button x:Name="btnAddProduct"
                            Style="{StaticResource addButton}"
                            Grid.Row="3"
                            Grid.Column="1"
                            Click="btnAddProduct_Click"
                            >
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Plus"
                                                VerticalAlignment="Center"
                                                Width="11"
                                                Height="11"
                                               Margin="0 0 10 0"
                                               Foreground="{DynamicResource IconButtonColor}"/>

                                    <TextBlock Text="Thêm mới"
                                   Foreground="{DynamicResource TextButtonColor}"/>
                                </StackPanel>
                            </Button>

                        </Grid>
                        
                    </Expander>

                </Grid>

            </Border>
            <!--End: Left Section-->
        </Grid>

    </Border>

</Window>
