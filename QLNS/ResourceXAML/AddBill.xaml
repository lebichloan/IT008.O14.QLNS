<Window x:Class="QLNS.ResourceXAML.AddBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLNS.ResourceXAML"
        xmlns:uc="clr-namespace:QLNS.Controls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Name="addBill"
        Title="AddBill" 
        Height="790" Width="1150"
        MinHeight="790" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{DynamicResource SecundaryBackgroundColor}"
        Loaded="addBill_Loaded">

    <Border CornerRadius="5"
            Background="{DynamicResource SecundaryBackgroundColor}"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--App Title--><!--
            <TextBlock Text="Thêm hóa đơn" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"
                           FontSize="15" 
                           FontWeight="SemiBold"
                           />-->
            
            <!-- Start: Button Close | Restore | Minimize -->
            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                <Button x:Name="btnRestore" Margin="5,0" Click="btnRestore_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButtonsStyle}">
                            <Setter Property="Content" Value="{DynamicResource maximize}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}" Value="Maximized">
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
            </StackPanel>
            <!-- End: Button Close | Restore | Minimize -->

            <!-- Seprator -->
            <Separator Height="1" Grid.Row="1" Grid.ColumnSpan="2"
                               Background="{DynamicResource SepratorBackgroundColor}"
                               Margin="0 0 0 5"/>

            <!--Start: Right Section-->
            <Border Grid.Row="2"
                    Grid.Column="1"
                    CornerRadius="7 0 0 7"
                    Background="{DynamicResource CardBackgroundColor}">
                <StackPanel Margin="60 0 10 0"
                            VerticalAlignment="Center">
                    <Button Style="{DynamicResource stepButton}"
                            x:Name="btnAddProduct"
                            >
                        <uc:AddBillStepItem Step="Thêm sản phẩm"
                                            Title="Vui lòng chọn các sản phẩm của hóa đơn"
                                            Number="1"
                                            x:Name="ucAddProduct"
                                            IsUnable="True"
                                            />
                    </Button>

                    <Button Style="{DynamicResource stepButton}"
                            x:Name="btnAddCustomer"
                            >
                        <uc:AddBillStepItem Step="Thêm khách hàng"
                                            Title="Vui lòng chọn các sản phẩm của hóa đơn"
                                            Number="2"
                                            x:Name="ucAddCustomer"
                                            IsActive="True"
                                            />
                    </Button>

                    <Button Style="{DynamicResource stepButton}"
                            x:Name="btnCheckOut"
                            >
                        <uc:AddBillStepItem Step="Kiểm tra thông tin"
                                            Title="Vui lòng kiểm tra lại các thông tin của hóa đơn"
                                            Number="3"
                                            x:Name="ucCheckOut"
                                            IsPre="True"
                                            />
                    </Button>

                </StackPanel>
            </Border>
            <!--End: Right Section-->
            
            
            <!--Start: Left Section-->
            <Border Grid.Row="2"
                    Background="{DynamicResource SecundaryBackgroundColor}"
                    CornerRadius="0 0 0 0">
                
                <Grid VerticalAlignment="Center"
                      Margin="70 0 -60 0">
                    
                    <!--Background Layer-->
                    <Border CornerRadius="7 0 0 0"
                            Background="{DynamicResource PrimaryBackgroundColor}"
                            Height="50"
                            Margin="40 -30 60 0"
                            VerticalAlignment="Top"/>

                    <Border CornerRadius="7 0 0 0"
                            Background="{DynamicResource PrimaryBackgroundColor}"
                            Height="50"
                            Margin="20 -15 60 0"
                            VerticalAlignment="Top"/>

                    <!--Main Layer-->
                    <Border CornerRadius="7"
                            Background="{DynamicResource SecundaryBackgroundColor}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="30" 
                                              ShadowDepth="5"
                                              Direction="-130"
                                              Opacity="0.1"/>
                        </Border.Effect>
                    </Border>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Frame Grid.ColumnSpan="2"
                               Grid.Row="0"
                               Name="stepContainer"
                               Margin="20 20 20 20"
                               NavigationUIVisibility="Hidden">
                        </Frame>

                        <!--Form Button Background-->
                        <Border Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Background="{DynamicResource PrimaryBackgroundColor}"
                                CornerRadius="0 0 7 7"/>
                        
                        <!--Next Button-->
                        <Button x:Name="btnNext"
                                Grid.Column="1"
                                Grid.Row="1"
                                HorizontalAlignment="Right"
                                Margin="0 10 20 10"
                                Style="{DynamicResource nextButton}">
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tiếp tục"
                                   Foreground="{DynamicResource TextButtonColor}"/>
                                <Icon:PackIconMaterial Kind="ChevronRight"
                                                VerticalAlignment="Center"
                                                Width="11"
                                                Height="11"
                                               Margin="10 0 0 0"
                                               Foreground="{DynamicResource IconButtonColor}"/>
                            </StackPanel>

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="5"
                                                  Color="#FFF"
                                                  Opacity="0.3"
                                                  Direction="-120"/>
                            </Button.Effect>
                        </Button>

                        <!--Start: Preious button-->
                        <Border Grid.Column="0"
                                Grid.Row="1"
                                Width="120"
                                Height="35"
                                HorizontalAlignment="Left"
                                Margin="20 0 0 0"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource BorderButtonColor}"
                                CornerRadius="7 7 7 7"
                                Panel.ZIndex="2"/>

                        <Button Grid.Column="0"
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                Margin="20 0 0 0"
                                Style="{DynamicResource backButton}">

                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="ChevronLeft"
                                                VerticalAlignment="Center"
                                                Width="11"
                                                Height="11"
                                               Margin="0 0 10 0"
                                               Foreground="{DynamicResource PrimaryTextColor}"/>
                                <TextBlock Text="Quay lại"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                            </StackPanel>

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="5"
                                                  Color="#FFF"
                                                  Opacity="0.3"
                                                  Direction="-120"/>
                            </Button.Effect>

                        </Button>
                        <!--End: Preious button-->
                        
                    </Grid>
                </Grid>
                
            </Border>
            <!--End: Left Section-->
        </Grid>
        
    </Border>
    
</Window>
