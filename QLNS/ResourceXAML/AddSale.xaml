<Window x:Class="QLNS.ResourceXAML.AddSale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLNS.ResourceXAML"
        xmlns:vld="clr-namespace:QLNS.Validations"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:QLNS.Controls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Name="addSale"
        Title="AddSale" Height="500" Width="800">

    <Border CornerRadius="5"
            Background="{DynamicResource SecundaryBackgroundColor}"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Start: Binding control for validation-->
            <DatePicker x:Name="dateProvider_Start" Visibility="Collapsed"/>
            <DatePicker x:Name="dateProvider_End" Visibility="Collapsed"/>
            <ComboBox x:Name="binding_ComboBox" Visibility="Collapsed"/>
            <!--End: Binding control for validation-->


            <TextBlock Text="Thêm khuyến mãi"
                       Grid.Row="0"
                       FontSize="25"
                       FontWeight="Bold"   
                       Margin="5 5 0 0"
                       HorizontalAlignment="Left" />

            <!-- Start: Button Close | Restore | Minimize -->
            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">

                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                <Button x:Name="btnRestore" Margin="5,0" Click="btnRestore_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButtonsStyle}">
                            <Setter Property="Content" Value="{DynamicResource maximize}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}" Value="Maximized">
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                    <Setter Property="Content" Value="{DynamicResource restore}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
            </StackPanel>

            <!-- Seprator -->
            <Separator Height="1" Grid.Row="1" Grid.ColumnSpan="2"
                   Background="{DynamicResource SepratorBackgroundColor}"
                   Margin="0 0 0 5"/>

            <StackPanel Grid.Row="2" Orientation="Vertical" >
                <!--<TextBox x:Name="maKM" VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Width="300" Height="40"
                         Margin="10 5 0 0"
                         materialDesign:HintAssist.Hint="Mã khuyến mãi"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" />-->
                <TextBox x:Name="tenKM" VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Width="300" Height="40"
                         Margin="10 5 0 15"
                         materialDesign:HintAssist.Hint="Tên khuyến mãi"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" >
                    <TextBox.Text>
                        <Binding Path="tenkm"
                                 ElementName="addSale"
                                 ValidatesOnDataErrors="True"
                                 UpdateSourceTrigger="PropertyChanged"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <vld:EmptyStringValid></vld:EmptyStringValid>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <TextBox x:Name="moTa" VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Width="300" Height="40"
                         Margin="10 5 0 15"
                         materialDesign:HintAssist.Hint="Mô tả"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                </TextBox>
                <ComboBox x:Name="loaiKH" VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Width="300" Height="40"
                         Margin="10 5 0 15"
                         materialDesign:HintAssist.Hint="Loại khách hàng"
                         Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                </ComboBox>
                <DatePicker x:Name="ngayBatDau" Margin="10 5 0 15" HorizontalAlignment="Left"
                            Width="300"  
                            materialDesign:HintAssist.Hint="Ngày bắt đầu" 
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}">
                    <DatePicker.SelectedDate>
                        <Binding Path="SelectedDate" 
                                 ElementName="dateProvider_Start" 
                                 ValidatesOnDataErrors="True"
                                 UpdateSourceTrigger="PropertyChanged"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <vld:Sale_StartDateValid></vld:Sale_StartDateValid>
                            </Binding.ValidationRules>
                        </Binding>
                    </DatePicker.SelectedDate>
                </DatePicker>



                <DatePicker x:Name="ngayKetThuc" Margin="10 5 0 15" HorizontalAlignment="Left"
                            
                            Width="300"  
                            materialDesign:HintAssist.Hint="Ngày kết thúc" 
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}">
                    <DatePicker.SelectedDate>
                        <Binding Path="SelectedDate" 
                                 ElementName="dateProvider_End" 
                                 ValidatesOnDataErrors="True"
                                 UpdateSourceTrigger="PropertyChanged"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <vld:Sale_EndDateValid></vld:Sale_EndDateValid>
                            </Binding.ValidationRules>
                        </Binding>
                    </DatePicker.SelectedDate>
                </DatePicker>

                <TextBox x:Name="giamGia" VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Width="300" Height="40"
                         Margin="10 5 0 0"
                         materialDesign:HintAssist.Hint="Giảm giá"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                    <TextBox.Text>
                        <Binding Path="giamgia"
                                 ElementName="addSale"
                                 UpdateSourceTrigger="PropertyChanged"
                                 ValidatesOnDataErrors="True"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <vld:DiscountValid></vld:DiscountValid>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <Button Height="35" Margin="5" Width="150"
                        Click="ButtonAdd_Click"
                        Content="Thêm mới">
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
