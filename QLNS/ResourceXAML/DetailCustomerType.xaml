<Window x:Class="QLNS.ResourceXAML.DetailCustomerType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vld="clr-namespace:QLNS.Validations"
        xmlns:local="clr-namespace:QLNS.ResourceXAML"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="DetailCustomerType" Height="500" Width="450">

    <Border Background="White" CornerRadius="5" Margin="10" BorderThickness="1" BorderBrush="#BFBFBF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!--Start: Binding Control-->
            <TextBox x:Name="bindingTenLKH" Visibility="Collapsed"></TextBox>
            <TextBox x:Name="bindingMoTa" Visibility="Collapsed"></TextBox>
            <TextBox x:Name="bindingDTLTT" Visibility="Collapsed"></TextBox>
            <!--End: Binding Control-->

            <DockPanel Grid.Row="0">
                <TextBlock DockPanel.Dock="Left" FontSize="20" FontWeight="Bold" Margin="20 10 10 5">
                    Thông tin loại khách hàng
                </TextBlock>
                <Button x:Name="btnClose" DockPanel.Dock="Right" Margin="5"  HorizontalAlignment="Right" Click="btnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="25"/>
                            <Setter Property="Width" Value="50"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border Background="{TemplateBinding Background}" Height="25" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Icon:PackIconMaterial Kind="Close" Height="15" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center"></Icon:PackIconMaterial>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </DockPanel>

            <Separator Grid.Row="1" Height="5" Margin="20 0 20 0"/>

            <ScrollViewer Grid.Row="2" Height="355" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10,10,0,0" Grid.ColumnSpan="2">
                        <TextBlock Text="Tên loại khách hàng" FontSize="15" FontWeight="SemiBold" Margin="0 18 0 45"></TextBlock>
                        <TextBlock Text="Mô tả" FontSize="15" FontWeight="SemiBold" Margin="0 0 0 45"></TextBlock>
                        <TextBlock Text="Điểm tích lũy tối thiểu" FontSize="15" FontWeight="SemiBold" Margin="0 0 0 30"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0 10 0 0">
                        <TextBox x:Name="TenLKH" FontSize="14" Height="41" Margin="10 0 10 23" BorderBrush="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                            <TextBox.Text>
                                <Binding Path="Text"
                                         ElementName="bindingTenLKH"
                                         ValidatesOnDataErrors="True"
                                         NotifyOnValidationError="True"
                                         UpdateSourceTrigger="PropertyChanged"
                                         Mode="Default">
                                    <Binding.ValidationRules>
                                        <vld:EmptyStringValid></vld:EmptyStringValid>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBox x:Name="MoTa" FontSize="14" Margin="10 0 10 25" BorderBrush="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>

                        <TextBox x:Name="DTLTT" FontSize="14" Height="41" Margin="10 0 10 24" BorderBrush="Black" Style="{StaticResource MaterialDesignFloatingHintTextBox}" >
                            <TextBox.Text>
                                <Binding Path="Text"
                                          ElementName="bindingDTLTT"
                                          ValidatesOnDataErrors="True"
                                          NotifyOnValidationError="True"
                                          UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <vld:NumberValid></vld:NumberValid>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <Separator Grid.Row="3" Height="5" Margin="20 5 20 10"></Separator>

            <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0 0 20 0" VerticalAlignment="Center">
                <Button x:Name="btnCancel" Style="{StaticResource btnCancel}" Content="Hủy" Margin="0 0 10 0" Foreground="#879FFF"
                        Click="btnCancel_Click" >
                </Button>
                <Button x:Name="btnUpdate" Style="{StaticResource btnUpdate}" Content="Sửa" Click="btnUpdate_Click"></Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>